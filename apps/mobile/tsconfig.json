{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // add this
    "paths": {
      "@/*": ["./*"],
      "@packages/*": ["../../packages/*"] // new alias
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "../../packages/**/*.ts" // pick up all shared files
  ]
}
